[
    { "key": "space e", "command": "workbench.action.toggleSidebarVisibility", "when": "neovim.init && neovim.mode == normal"},
    { "key": "ctrl+h", "command": "workbench.files.action.focusFilesExplorer", "when": "editorTextFocus && neovim.init && neovim.mode == normal"},
    { "key": "ctrl+l", "command": "workbench.action.focusActiveEditorGroup", "when": "!editorTextFocus && neovim.init && neovim.mode == normal"},
    //{ "key": "g i", "command": "vscode-neovim.send", "args": "gi", "when": "editorTextFocus && neovim.init && neovim.mode == normal" },
    { "key": "alt+j", "command": "vscode-neovim.send", "args": "<a-j>", "when": "editorTextFocus && neovim.init" },
    { "key": "alt+k", "command": "vscode-neovim.send", "args": "<a-k>", "when": "editorTextFocus && neovim.init" },
]